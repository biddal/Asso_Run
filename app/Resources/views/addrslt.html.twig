{% extends "template.html.twig" %}

{% block principal %}
    <div>
    <h1>Choisir la course afin d'y rentrer les temps</h1>
        
        <SELECT id="eventid" name="list_run" size="1">
            <OPTION value='0'>Selectionner une course</OPTION>
            {% for event in validate %}
                <OPTION value='{{ event.id }}'>{{ event.name }}</OPTION>
            {% endfor %}
        </SELECT>

        {#<form method="post" action="">
            {% for event in events %}
                <label>Temps : </label><input type="" name="time">
            {% endfor %}    
            <input type="submit" value="Envoyer" />
            <input type="hidden" name="eventid" id="selectedcourse"/>
        </form>#}
        {#{{ dump(events) }}#}
        {% for meet in validate %}
            <div class="hidden formTime" id="{{ meet.id }}">
            <h2>{{ meet.name }}</h2>
                <div class="formu_create" >
                    <form action="">
                        {% for event in events if event.idRun.id == meet.id %}
                            <div class="first">
                                <div id="temps">
                                    <span>{{ event.idUser.firstname }} {{ event.idUser.lastname }}</span>
                                </div>
                                <div>
                                    <span id="coef{{ event.id }}">{{ event.idUser.typ.coef }}</span>
                                </div>
                                <div id="temps">
                                    <label>Temps:</label>
                                    <input type="text" class="time" id="{{ event.id }}">
                                </div>
                                <div>
                                    <span id="point{{ event.id }}">En attente...</span>
                                </div>
                            </div>                           
                       {% endfor %}
                        <div>
                            <input type="hidden" name="eventid" id="{{ meet.id }}"/>
                            <button type="submit">Enregistrer!</button>
                        </div>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}